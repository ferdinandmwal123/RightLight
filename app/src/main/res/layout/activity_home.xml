<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppThemeNoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
    android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:paddingLeft="16px"
            android:text="Home"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="32dp"
            android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:id="@+id/rentBtn"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="180dp"
                    android:padding="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/curved_border"
                    android:text="Rent Out Product"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/returnBtn"
                    android:layout_weight="1"
                    android:minHeight="180dp"
                    android:padding="24dp"
                    app:layout_constraintLeft_toRightOf="@id/rentBtn"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/curved_border"
                    android:text="Return Product"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/productsBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minHeight="180dp"
                    android:padding="24dp"
                    android:background="@drawable/curved_border"
                    android:text="Products"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/customerBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minHeight="180dp"
                    android:padding="24dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/curved_border"
                    android:text="@string/customers"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/monthlyReportBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minHeight="180dp"
                    android:padding="24dp"
                    android:background="@drawable/curved_border"
                    android:text="Monthly reports"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSettings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minHeight="180dp"
                    android:padding="24dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/curved_border"
                    android:text="Settings"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



